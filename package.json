{
  "name": "submit",
  "version": "0.0.1",
  "description": "GOV.UK branded form and static site builder",
  "main": "dist/main.js",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "scripts": {
    "build": "webpack --config config/webpack/prod.ts",
    "fix:ts": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "lint": "npm run -s lint:ts",
    "lint:ts": "eslint --format codeframe --ext .js,.jsx,.ts,.tsx .",
    "start": "webpack --watch --config config/webpack/dev.ts",
    "test": "npm run -s test:unit && npm run -s lint",
    "test:unit": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/submit.git"
  },
  "author": "GOV.UK Submit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alphagov/submit/issues"
  },
  "homepage": "https://github.com/alphagov/submit#readme",
  "dependencies": {
    "front-matter": "^3.1.0",
    "glob": "^7.1.6",
    "govuk-frontend": "^3.5.0",
    "js-yaml": "^3.13.1",
    "koa": "^2.11.0",
    "koa-compress": "^3.0.0",
    "koa-csrf": "^3.0.8",
    "koa-helmet": "^5.2.0",
    "koa-mount": "^4.0.0",
    "koa-session": "^5.13.1",
    "koa-static": "^5.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.3.1",
    "winston": "^3.2.1",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/compression-webpack-plugin": "^2.0.1",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/eslint": "^6.1.8",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.2",
    "@types/js-yaml": "^3.12.2",
    "@types/koa": "^2.11.1",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-csrf": "^3.0.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-session": "^5.10.1",
    "@types/koa-static": "^4.0.1",
    "@types/nodemon": "^1.19.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/supertest": "^2.0.8",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@types/webpack": "^4.41.6",
    "@types/webpack-dev-server": "^3.10.0",
    "@types/webpack-node-externals": "^1.7.1",
    "@types/yargs": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.1.0",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "extract-loader": "^4.0.3",
    "file-loader": "^5.0.2",
    "http-errors": "^1.7.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "jest-enzyme": "^7.1.2",
    "node-sass": "^4.13.1",
    "nodemon-webpack-plugin": "^4.3.1",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "supertest": "^4.0.2",
    "terser-webpack-plugin": "^2.3.5",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx,js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/config/",
      "<rootDir>/src/frontend/init.ts",
      ".d.ts",
      "server.ts",
      "index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss|sass)$": "<rootDir>/config/jest/file.ts"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(css|scss|sass)$": "identity-obj-proxy"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts|tsx|js|jsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/enzyme.config.ts"
    ]
  }
}
